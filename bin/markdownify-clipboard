#!/bin/bash
if [ -n "$resourcePath" ]; then
    # Expect scripts in $resourcePath, if set, for Platypus bundle
    # compatibility.
    SCRIPT_DIR="$resourcePath"
else
    # Otherwise expect them to be present alongside this script.
    SCRIPT_DIR="$(dirname "${BASH_SOURCE[0]}")"
fi
python3 "$SCRIPT_DIR/clipboard-to-markdown" | pbcopy
